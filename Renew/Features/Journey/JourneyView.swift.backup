            let slowPulse = sin(time * 0.2) * 0.1 + 1.0
            let deepPulse = sin(time * 0.15) * 0.08 + 1.0

            let wave1 = sin(swirl * 1.1) * activity
            let wave2 = sin(swirl * 0.9 + .pi / 2) * activity
            let wave3 = sin(swirl * 1.4 + .pi / 3) * activity

            ZStack {

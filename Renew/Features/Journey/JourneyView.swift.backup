private struct FluidOrbView: View {
    let isPlaying: Bool

    var body: some View {
        TimelineView(.animation) { timeline in
            let time = timeline.date.timeIntervalSinceReferenceDate
            let activity = isPlaying ? 1.0 : 0.2
